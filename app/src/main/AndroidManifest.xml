<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.android.argb.edhlc"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme"
        android:versionCode="6"
        android:versionName="6.0">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OverviewActivity"
            android:label="@string/activity_overview_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.HistoryActivity"
            android:label="@string/activity_history_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.RecordsActivity"
            android:label="@string/activity_records_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/activity_settings_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.TurnActivity"
            android:label="@string/activity_turn_label"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.PlayerListActivity"
            android:label="@string/activity_player_list_label"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".activities.PlayerActivity"
            android:label="@string/activity_player_label"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".activities.DeckActivity"
            android:label="@string/activity_turn_deck"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- Declare the bundled CropImage Activity -->
        <activity android:name="com.android.camera.CropImage"/>
    </application>
</manifest>
