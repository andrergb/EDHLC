<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="MyAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/accent_color</item>
    </style>

    <style name="CheckboxStyle">
        <!-- theBorderColorInUncheckedState -->
        <item name="android:colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/secondary_text</item>
    </style>

</resources>