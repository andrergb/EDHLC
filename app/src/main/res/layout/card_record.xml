<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewRecordCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/relativeTitleRecordCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCardExpansion"
            android:padding="16dp">

            <TextView
                android:id="@+id/textTitleRecordCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Record"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/indicatorRecordCard"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:src="@drawable/arrow_down"
                android:tint="@color/secondary_text"/>
        </RelativeLayout>

        <!-- separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/divider"/>

        <!-- Middle content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date -->
            <TextView
                android:id="@+id/textDateRecordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:text="Played on 25/12/2015"
                android:textStyle="italic"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- separator -->
                <View
                    android:id="@+id/divider1RecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.3"
                    android:background="@color/divider"/>
                <!-- 1st -->
                <LinearLayout
                    android:id="@+id/linearFirstLineRecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textFirstIndicatorRecordCard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="1st"
                        android:tint="@color/secondary_text"/>

                    <!-- First place text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textFirstDeckRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's name"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textFirstPlayerRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's owner"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- separator -->
                <View
                    android:id="@+id/divider1RecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:background="@color/divider"/>

                <!-- 2nd -->
                <LinearLayout
                    android:id="@+id/linearSecondLineRecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textSecondIndicatorRecordCard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="2nd"
                        android:tint="@color/secondary_text"/>

                    <!-- First place text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textSecondDeckRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's name"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textSecondPlayerRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's owner"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- separator -->
                <View
                    android:id="@+id/divider2RecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:background="@color/divider"/>

                <!-- 3rd -->
                <LinearLayout
                    android:id="@+id/linearThirdLineRecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textThirdIndicatorRecordCard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="3rd"
                        android:tint="@color/secondary_text"/>

                    <!-- First place text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textThirdDeckRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's name"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textThirdPlayerRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's owner"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- separator -->
                <View
                    android:id="@+id/divider3RecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.5"
                    android:background="@color/divider"/>

                <!-- 4th -->
                <LinearLayout
                    android:id="@+id/linearFourthLineRecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textFourthIndicatorRecordCard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="4th"
                        android:tint="@color/secondary_text"/>

                    <!-- First place text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textFourthDeckRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's name"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textFourthPlayerRecordCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deck's owner"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- separator -->
                <View
                    android:id="@+id/divider1RecordCard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.3"
                    android:background="@color/divider"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>