<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/DrawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <ScrollView
            android:id="@+id/scrollLogGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLogGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--First Line-->
                <LinearLayout
                    android:id="@+id/firstLineParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray300"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="First Place"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:id="@+id/firstLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/firstCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            card_view:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="16dp">

                                    <!-- Circle icon -->
                                    <ImageView
                                        android:id="@+id/avatarFirstLogGame"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/avatar_holder">
                                    </ImageView>
                                </RelativeLayout>

                                <!-- Row text -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="16dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/playerNameLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/linearIdentity"
                                        android:layout_toStartOf="@+id/linearIdentity"
                                        android:singleLine="true"
                                        android:text="Player name1"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"/>

                                    <TextView
                                        android:id="@+id/deckNameFirstLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="deck name"
                                        android:textColor="@color/secondary_text"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!--Second Line-->
                <LinearLayout
                    android:id="@+id/secondLineParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray300"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="Second Place"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:id="@+id/secondLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/secondCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            card_view:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="16dp">

                                    <!-- Circle icon -->
                                    <ImageView
                                        android:id="@+id/avatarSecondLogGame"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/avatar_holder">
                                    </ImageView>
                                </RelativeLayout>

                                <!-- Row text -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="16dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/playerNameLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/linearIdentity"
                                        android:layout_toStartOf="@+id/linearIdentity"
                                        android:singleLine="true"
                                        android:text="Player name2"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"/>

                                    <TextView
                                        android:id="@+id/deckNameSecondLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="deck name"
                                        android:textColor="@color/secondary_text"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!--Third Line-->
                <LinearLayout
                    android:id="@+id/thirdLineParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray300"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="Third Place"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:id="@+id/thirdLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/thirdCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            card_view:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="16dp">

                                    <!-- Circle icon -->
                                    <ImageView
                                        android:id="@+id/avatarThirdLogGame"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/avatar_holder">
                                    </ImageView>
                                </RelativeLayout>

                                <!-- Row text -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="16dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/playerNameLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/linearIdentity"
                                        android:layout_toStartOf="@+id/linearIdentity"
                                        android:singleLine="true"
                                        android:text="Player name3"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"/>

                                    <TextView
                                        android:id="@+id/deckNameThirdLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="deck name"
                                        android:textColor="@color/secondary_text"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!--Fourth Line-->
                <LinearLayout
                    android:id="@+id/fourthLineParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray300"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="Fourth Place"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:id="@+id/fourthLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/fourthCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            card_view:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="16dp">

                                    <!-- Circle icon -->
                                    <ImageView
                                        android:id="@+id/avatarFourthLogGame"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/avatar_holder">
                                    </ImageView>
                                </RelativeLayout>

                                <!-- Row text -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="16dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/playerNameLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/linearIdentity"
                                        android:layout_toStartOf="@+id/linearIdentity"
                                        android:singleLine="true"
                                        android:text="Player name4"
                                        android:textColor="@color/primary_text"
                                        android:textSize="16sp"/>

                                    <TextView
                                        android:id="@+id/deckNameFourthLogGame"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="deck name"
                                        android:textColor="@color/secondary_text"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>