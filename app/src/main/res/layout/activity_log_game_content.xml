<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <ScrollView
            android:id="@+id/scrollLogGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--First Line-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp">

                        <LinearLayout
                            android:id="@+id/firstLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:id="@+id/firstCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                card_view:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginTop="16dp">

                                        <!-- Circle icon -->
                                        <ImageView
                                            android:id="@+id/avatarFirstLogGame"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/avatar_holder">
                                        </ImageView>
                                    </RelativeLayout>

                                    <!-- Row text -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/playerFirstNameLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Player name1"
                                            android:textColor="@color/primary_text"
                                            android:textSize="16sp"/>

                                        <TextView
                                            android:id="@+id/playerFirstDeckLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="deck name"
                                            android:textColor="@color/secondary_text"
                                            android:textSize="12sp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <!-- Podium holder -->
                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:layout_marginLeft="4dp">

                            <RelativeLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_centerInParent="true">

                                <View
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/place_log_game"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="3dp"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray300"/>
                </LinearLayout>

                <!--Second Line-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp">

                        <LinearLayout
                            android:id="@+id/secondLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:id="@+id/secondCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                card_view:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginTop="16dp">

                                        <!-- Circle icon -->
                                        <ImageView
                                            android:id="@+id/avatarSecondLogGame"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/avatar_holder">
                                        </ImageView>
                                    </RelativeLayout>

                                    <!-- Row text -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/playerSecondNameLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Player name1"
                                            android:textColor="@color/primary_text"
                                            android:textSize="16sp"/>

                                        <TextView
                                            android:id="@+id/playerSecondDeckLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="deck name"
                                            android:textColor="@color/secondary_text"
                                            android:textSize="12sp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <!-- Podium holder -->
                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:layout_marginLeft="4dp">


                            <RelativeLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_centerInParent="true">

                                <View
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/place_log_game"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="3dp"
                                    android:text="2"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray300"/>
                </LinearLayout>

                <!--Third Line-->
                <LinearLayout
                    android:id="@+id/thirdLineParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp">

                        <LinearLayout
                            android:id="@+id/thirdLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:id="@+id/thirdCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                card_view:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginTop="16dp">

                                        <!-- Circle icon -->
                                        <ImageView
                                            android:id="@+id/avatarThirdLogGame"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/avatar_holder">
                                        </ImageView>
                                    </RelativeLayout>

                                    <!-- Row text -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/playerThirdNameLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Player name1"
                                            android:textColor="@color/primary_text"
                                            android:textSize="16sp"/>

                                        <TextView
                                            android:id="@+id/playerThirdDeckLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="deck name"
                                            android:textColor="@color/secondary_text"
                                            android:textSize="12sp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <!-- Podium holder -->
                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:layout_marginLeft="4dp">


                            <RelativeLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_centerInParent="true">

                                <View
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/place_log_game"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="3dp"
                                    android:text="3"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray300"/>
                </LinearLayout>

                <!--Fourth Line-->
                <LinearLayout
                    android:id="@+id/fourthLineParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp">

                        <LinearLayout
                            android:id="@+id/fourthLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:id="@+id/fourthCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                card_view:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginTop="16dp">

                                        <!-- Circle icon -->
                                        <ImageView
                                            android:id="@+id/avatarFourthLogGame"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/avatar_holder">
                                        </ImageView>
                                    </RelativeLayout>

                                    <!-- Row text -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="16dp"
                                        android:layout_marginRight="16dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/playerFourthNameLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Player name1"
                                            android:textColor="@color/primary_text"
                                            android:textSize="16sp"/>

                                        <TextView
                                            android:id="@+id/playerFourthDeckLogGame"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="deck name"
                                            android:textColor="@color/secondary_text"
                                            android:textSize="12sp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <!-- Podium holder -->
                        <RelativeLayout
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:layout_marginLeft="4dp">


                            <RelativeLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_centerInParent="true">

                                <View
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/place_log_game"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="1dp"
                                    android:layout_marginLeft="3dp"
                                    android:text="4"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray300"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>