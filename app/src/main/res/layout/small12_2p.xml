<android.support.v7.widget.CardView android:id="@+id/layout12_card_view"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp">

    <LinearLayout
        android:id="@+id/layout12_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <!-- Header player name -->
        <RelativeLayout
            android:id="@+id/layout12_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:onClick="onClickLayout"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:tag="small">

            <LinearLayout
                android:id="@+id/layout12_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/crown_size_collapsed"
                android:layout_marginStart="@dimen/crown_size_collapsed"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/layout12_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="PlayerName12"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/layout12_deck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="PlayerName"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/layout12_throne"
                android:layout_width="@dimen/crown_size_collapsed"
                android:layout_height="@dimen/crown_size_collapsed"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_crown"/>
        </RelativeLayout>

        <!--LIFE VALUE-->
        <RelativeLayout
            android:id="@+id/layout12_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <TextView
                android:id="@+id/layout12_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:text="40"
                android:textSize="@dimen/life_2_digits_max"/>

            <!--LIFE BUTTONS-->
            <LinearLayout
                android:id="@+id/layout12_121"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:weightSum="2">

                <!--LIFE POSITIVE-->
                <LinearLayout
                    android:id="@+id/layout12_1211"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/layout12_life_positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:onClick="onClickLayout"
                        android:src="@drawable/icon_up1"/>
                </LinearLayout>

                <!--LIFE NEGATIVE-->
                <LinearLayout
                    android:id="@+id/layout12_1212"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:paddingTop="6dp">

                    <ImageView
                        android:id="@+id/layout12_life_negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:onClick="onClickLayout"
                        android:src="@drawable/icon_down1"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Footer edh -->
        <GridLayout
            android:id="@+id/layout12_131"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:columnCount="2"
            android:rowCount="3">

            <Space
                android:id="@+id/layout12_1311"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"/>

            <TextView
                android:id="@+id/layout12_edh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="40"
                android:textSize="16sp"/>

            <Space
                android:id="@+id/layout12_1312"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"/>

            <Space
                android:id="@+id/layout12_1313"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"/>

            <TextView
                android:id="@+id/layout12_edh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="40"
                android:textSize="16sp"/>

            <Space
                android:id="@+id/layout12_1314"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"/>
        </GridLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
