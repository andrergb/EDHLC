<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <!-- Date -->
    <TextView
        android:id="@+id/textDateRecordCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Played on 25/12/2015"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- separator -->
        <View
            android:id="@+id/divider1RecordCard"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"/>

        <!-- 1st -->
        <LinearLayout
            android:id="@+id/linearFirstLineRecordCard"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFirstIndicatorRecordCard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="1st"
                android:tint="@color/secondary_text"/>

            <!-- First place text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textFirstDeckRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's name"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textFirstPlayerRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's owner"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- separator -->
        <View
            android:id="@+id/divider1RecordCard"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="88dp"
            android:alpha="0.5"
            android:background="@color/divider"/>

        <!-- 2nd -->
        <LinearLayout
            android:id="@+id/linearSecondLineRecordCard"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSecondIndicatorRecordCard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="2nd"
                android:tint="@color/secondary_text"/>

            <!-- First place text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSecondDeckRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's name"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textSecondPlayerRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's owner"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- separator -->
        <View
            android:id="@+id/divider2RecordCard"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="88dp"
            android:alpha="0.5"
            android:background="@color/divider"/>

        <!-- 3rd -->
        <LinearLayout
            android:id="@+id/linearThirdLineRecordCard"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textThirdIndicatorRecordCard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="3rd"
                android:tint="@color/secondary_text"/>

            <!-- First place text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textThirdDeckRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's name"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textThirdPlayerRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's owner"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- separator -->
        <View
            android:id="@+id/divider3RecordCard"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="88dp"
            android:alpha="0.5"
            android:background="@color/divider"/>

        <!-- 4th -->
        <LinearLayout
            android:id="@+id/linearFourthLineRecordCard"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFourthIndicatorRecordCard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="4th"
                android:tint="@color/secondary_text"/>

            <!-- First place text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textFourthDeckRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's name"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textFourthPlayerRecordCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deck's owner"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- separator -->
        <View
            android:id="@+id/divider1RecordCard"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>