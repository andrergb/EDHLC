<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".activities.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linearLayoutP1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_overview"
            android:onClick="onClickP1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewP1Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="PlayerName"
                android:textSize="20sp" />


            <ListView
                android:id="@+id/listViewP1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutP2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_overview"
            android:onClick="onClickP2"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewP2Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="PlayerName"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewP2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical">
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linearLayoutP3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_overview"
            android:onClick="onClickP3"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewP3Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="PlayerName"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewP3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutP4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_overview"
            android:onClick="onClickP4"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewP4Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="PlayerName"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/listViewP4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical">
            </ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
