<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <!-- P1 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1">

                <!--LIFE-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <TextView
                        android:id="@+id/textViewOverviewP1Life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:onClick="onClickOverview"
                        android:paddingBottom="6dp"
                        android:singleLine="true"
                        android:text="40"
                        android:textColor="@color/primary_text"
                        android:textSize="100sp"/>

                    <!--LIFE VALUE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="8.7"/>

                        <!--LIFE BUTTONS-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1.3"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <!--LIFE POSITIVE-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:id="@+id/lifePositiveP1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:onClick="onClickOverview"
                                    android:src="@drawable/icon_up1"/>
                            </LinearLayout>

                            <!--LIFE NEGATIVE-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:paddingTop="12dp">

                                <ImageView
                                    android:id="@+id/lifeNegativeP1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:onClick="onClickOverview"
                                    android:src="@drawable/icon_down1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <!-- Header player name -->
                    <RelativeLayout
                        android:id="@+id/nameP1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:onClick="onClickOverview">

                        <ImageView
                            android:id="@+id/imageViewThroneP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textViewOverviewP1Name"
                            android:layout_toStartOf="@+id/textViewOverviewP1Name"
                            android:adjustViewBounds="true"
                            android:padding="12dp"
                            android:src="@drawable/icon_crown"/>

                        <TextView
                            android:id="@+id/textViewOverviewP1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="PlayerName"
                            android:textSize="26sp"/>
                    </RelativeLayout>

                    <!--FAKE LIFE-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"/>

                    <!-- Footer edh -->
                    <LinearLayout
                        android:id="@+id/linearEDH1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textViewOverviewP1EDH1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textColor="@color/secondary_text"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/textViewOverviewP1EDH2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textColor="@color/secondary_text"
                            android:textSize="22sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- P2 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1">

                <!--LIFE-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <TextView
                        android:id="@+id/textViewOverviewP2Life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:onClick="onClickOverview"
                        android:paddingBottom="6dp"
                        android:singleLine="true"
                        android:text="40"
                        android:textColor="@color/primary_text"
                        android:textSize="100sp"/>

                    <!--LIFE VALUE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="8.7"/>

                        <!--LIFE BUTTONS-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1.3"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <!--LIFE POSITIVE-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:paddingBottom="12dp">

                                <ImageView
                                    android:id="@+id/lifePositiveP2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:onClick="onClickOverview"
                                    android:src="@drawable/icon_up1"/>
                            </LinearLayout>

                            <!--LIFE NEGATIVE-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:paddingTop="12dp">

                                <ImageView
                                    android:id="@+id/lifeNegativeP2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:onClick="onClickOverview"
                                    android:src="@drawable/icon_down1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <!-- Header player name -->
                    <RelativeLayout
                        android:id="@+id/nameP2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:onClick="onClickOverview">

                        <ImageView
                            android:id="@+id/imageViewThroneP2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textViewOverviewP2Name"
                            android:layout_toStartOf="@+id/textViewOverviewP2Name"
                            android:adjustViewBounds="true"
                            android:padding="12dp"
                            android:src="@drawable/icon_crown"/>

                        <TextView
                            android:id="@+id/textViewOverviewP2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="PlayerName"
                            android:textSize="26sp"/>
                    </RelativeLayout>

                    <!--FAKE LIFE-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"/>

                    <!-- Footer edh -->
                    <LinearLayout
                        android:id="@+id/linearEDH2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textViewOverviewP2EDH1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textColor="@color/secondary_text"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/textViewOverviewP2EDH2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textColor="@color/secondary_text"
                            android:textSize="22sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>