<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            tools:context=".activities.MainActivity$PlaceholderFragment">

            <!-- P1 -->
            <android.support.v7.widget.CardView
                android:id="@+id/overviewCardP1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp"
                    android:onClick="onClickP1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <!-- Header player name -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.4">

                        <ImageView
                            android:id="@+id/imageViewThroneP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textViewOverviewP1Name"
                            android:layout_toStartOf="@+id/textViewOverviewP1Name"
                            android:adjustViewBounds="true"
                            android:padding="12dp"
                            android:src="@drawable/icon_crown"/>

                        <TextView
                            android:id="@+id/textViewOverviewP1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="PlayerName"
                            android:textSize="24sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/textViewOverviewP1Life"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text="40"
                            android:textSize="100sp"/>

                        <!--LIFE VALUE-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="8.7"/>

                            <!--LIFE BUTTONS-->
                            <LinearLayout
                                android:id="@+id/linearOverviewP1Buttons"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1.3"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <!--LIFE POSITIVE-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:paddingBottom="12dp">

                                    <ImageView
                                        android:id="@+id/lifePositiveP1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/icon_up1"/>
                                </LinearLayout>

                                <!--LIFE NEGATIVE-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="top"
                                    android:paddingTop="12dp">

                                    <ImageView
                                        android:id="@+id/lifeNegativeP1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/icon_down1"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>
                    <!-- Footer edh -->
                    <LinearLayout
                        android:id="@+id/linearEDH1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textViewOverviewP1EDH1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/textViewOverviewP1EDH2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textSize="22sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- P2 -->
            <android.support.v7.widget.CardView
                android:id="@+id/overviewCardP2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp"
                    android:onClick="onClickP2"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:weightSum="2">

                    <!-- Header player name -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                        <ImageView
                            android:id="@+id/imageViewThroneP2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textViewOverviewP2Name"
                            android:layout_toStartOf="@+id/textViewOverviewP2Name"
                            android:adjustViewBounds="true"
                            android:padding="12dp"
                            android:src="@drawable/icon_crown"/>

                        <TextView
                            android:id="@+id/textViewOverviewP2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="PlayerName"
                            android:textSize="26sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/textViewOverviewP2Life"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text="40"
                            android:textSize="100sp"/>

                        <!--LIFE VALUE-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="8.7"/>

                            <!--LIFE BUTTONS-->
                            <LinearLayout
                                android:id="@+id/linearOverviewP2Buttons"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1.3"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <!--LIFE POSITIVE-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:paddingBottom="12dp">

                                    <ImageView
                                        android:id="@+id/lifePositiveP2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/icon_up1"/>
                                </LinearLayout>

                                <!--LIFE NEGATIVE-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="top"
                                    android:paddingTop="12dp">

                                    <ImageView
                                        android:id="@+id/lifeNegativeP2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/icon_down1"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Footer edh -->
                    <LinearLayout
                        android:id="@+id/linearEDH2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textViewOverviewP2EDH1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/textViewOverviewP2EDH2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/default_edh_21"
                            android:textSize="22sp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>