<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="2"
                  tools:context=".activities.MainActivity$PlaceholderFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/linearLayoutP1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_overview"
                android:onClick="onClickP1"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/textViewOverviewP1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="PlayerName"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/imageViewThroneP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="3dp"
                        android:layout_toEndOf="@id/textViewOverviewP1Name"
                        android:layout_toRightOf="@id/textViewOverviewP1Name"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/icon_crown"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/textViewOverviewP1Life"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="40"
                    android:textSize="100sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/textViewOverviewP1EDH1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/default_edh_21"/>

                    <TextView
                        android:id="@+id/textViewOverviewP1EDH2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/default_edh_21"/>

                    <TextView
                        android:id="@+id/textViewOverviewP1EDH3"
