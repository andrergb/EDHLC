<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/grid"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/grid21"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/layout21_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout21_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:weightSum="2">

                <!-- Header player name -->
                <RelativeLayout
                    android:id="@+id/layout21_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:onClick="onClickLayout"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:tag="big">

                    <LinearLayout
                        android:id="@+id/layout21_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="@dimen/crown_size_expanded"
                        android:layout_marginStart="@dimen/crown_size_expanded"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/layout21_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-thin"
                            android:maxLines="1"
                            android:text="PlayerName21"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/layout21_deck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-thin"
                            android:maxLines="1"
                            android:text="DeckName"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/layout21_throne"
                        android:layout_width="@dimen/crown_size_expanded"
                        android:layout_height="@dimen/crown_size_expanded"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_crown"/>
                </RelativeLayout>

                <!--LIFE VALUE-->
                <RelativeLayout
                    android:id="@+id/layout21_12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3">

                    <TextView
                        android:id="@+id/layout21_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-light"
                        android:singleLine="true"
                        android:text="40"
                        android:textSize="@dimen/player_life"/>

                    <!--LIFE BUTTONS-->
                    <LinearLayout
                        android:id="@+id/layout21_121"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <!--LIFE POSITIVE-->
                        <LinearLayout
                            android:id="@+id/layout21_1211"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingBottom="6dp">

                            <ImageView
                                android:id="@+id/layout21_life_positive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:onClick="onClickLayout"
                                android:src="@drawable/icon_up1"/>
                        </LinearLayout>

                        <!--LIFE NEGATIVE-->
                        <LinearLayout
                            android:id="@+id/layout21_1212"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:paddingTop="6dp">

                            <ImageView
                                android:id="@+id/layout21_life_negative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:onClick="onClickLayout"
                                android:src="@drawable/icon_down1"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!-- Footer edh -->
                <GridLayout
                    android:id="@+id/layout21_131"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:columnCount="3"
                    android:rowCount="3">

                    <LinearLayout
                        android:id="@+id/layout21_1311"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1">

                        <ImageView
                            android:id="@+id/layout21_positive_EDH1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:onClick="onClickLayout"
                            android:src="@drawable/icon_up2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1312"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/layout21_edh1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:layout_rowWeight="1"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="1"
                            android:text="40"
                            android:textSize="@dimen/edh_collapsed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1313"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="2"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1">

                        <ImageView
                            android:id="@+id/layout21_negative_EDH1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:onClick="onClickLayout"
                            android:src="@drawable/icon_down2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1314"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1">

                        <ImageView
                            android:id="@+id/layout21_positive_EDH2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:onClick="onClickLayout"
                            android:src="@drawable/icon_up2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1315"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/layout21_edh2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:layout_rowWeight="1"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="1"
                            android:text="40"
                            android:textSize="@dimen/edh_collapsed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1316"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="2"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1">

                        <ImageView
                            android:id="@+id/layout21_negative_EDH2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:onClick="onClickLayout"
                            android:src="@drawable/icon_down2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1317"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1">

                        <ImageView
                            android:id="@+id/layout21_positive_EDH3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:onClick="onClickLayout"
                            android:src="@drawable/icon_up2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1318"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/layout21_edh3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:layout_rowWeight="1"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="1"
                            android:text="40"
                            android:textSize="@dimen/edh_collapsed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout21_1319"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_row="2"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1">

                        <ImageView
                            android:id="@+id/layout21_negative_EDH3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:onClick="onClickLayout"
                            android:src="@drawable/icon_down2"/>
                    </LinearLayout>
                </GridLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
