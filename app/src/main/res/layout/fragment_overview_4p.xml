                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:onClick="onClickOverview"
                                android:singleLine="true"
                                android:text="40"
                                android:textColor="@color/primary_text"
                                android:textSize="100sp"/>

                            <!--LIFE BUTTONS-->
