<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMainFooter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="2dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ln"
                android:layout_toStartOf="@+id/ln"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewMana6"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/icon_circle" />

                <ImageView
                    android:id="@+id/imageViewMana5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/icon_circle" />

                <ImageView
                    android:id="@+id/imageViewMana4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/icon_circle" />

                <ImageView
                    android:id="@+id/imageViewMana3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/icon_circle" />

                <ImageView
                    android:id="@+id/imageViewMana2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/icon_circle" />

                <ImageView
                    android:id="@+id/imageViewMana1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/icon_circle" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>