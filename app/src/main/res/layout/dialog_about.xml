<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/a"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-thin"
            android:text="@string/argb"
            android:textColor="@color/primary_color"
            android:textSize="8dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/accent_color"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="Version:   "
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="@string/version"
            android:textColor="@color/primary_color"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Third Parties"
        android:textColor="@color/accent_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/thirdPartyAChartEngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:padding="4dp"
        android:textColor="@color/black_transparent2"
        android:textSize="12sp"
        android:textStyle=""/>

    <TextView
        android:id="@+id/thirdPartyCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:padding="4dp"
        android:textColor="@color/black_transparent2"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/thirdColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:padding="4dp"
        android:textColor="@color/black_transparent2"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/apache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:textColor="@color/black_transparent2"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
</LinearLayout>